  <!-- Related Projects Row -->
  <div class="row">

    <div class="col-lg-12">
      <h3 class="page-header">Top Guides for Mt. Whistler</h3>
    </div>

    <% top_guides = [] %>
    <% @guides = Guide.all %>
    <% @guides.where(:location => 'Mount Whistler').each do |guide| %>
      <% average_rating = guide.reviews.average(:rating).round %>
      <% if top_guides.empty? %>
        <% top_guides[0] = guide %>
      <% elsif top_guides[0].reviews.average(:rating).round < average_rating %>
        <% top_guides[0] = guide %>
      <% elsif top_guides[1].nil? %>
        <% top_guides[1] = guide %>
      <% elsif top_guides[1].reviews.average(:rating).round < average_rating %>
        <% top_guides[1] = guide %>
      <% elsif top_guides[2].nil? %>
        <% top_guides[2] = guide %>
      <% elsif top_guides[2].reviews.average(:rating).round < average_rating %>
        <% top_guides[2] = guide %>
      <% end%>
    <% end %>

    <div class="col-sm-3 col-xs-6">
      <h3><%= link_to top_guides[0].user.name, top_guides[0] %></h3>
      <!-- <img class="img-responsive img-hover img-related" src="../img/guide-n-location/guide1.jpg" alt=""> -->
      <ul>
        <li>Sports: <%= top_guides[0].specialty %></li>
        <li>Rate: <%= number_to_currency(top_guides[0].rate) %></li>
        <li>Rating: <% stars = top_guides[0].reviews.average(:rating).round %>
          <% stars.times do |i| %>
            <span class="fa fa-star"></span>
          <% end %>
          <% (5 - stars).times do |i| %>
            <span class="fa fa-star-o"></span>
          <% end %>
        </li>
