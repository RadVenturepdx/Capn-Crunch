

<!-- Page Heading/Breadcrumbs -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header" style="text-align:center">Leave a Guide Review</h1>
  </div>
</div>
<!-- /.row -->

<!-- Registration Section -->
<div id="guide">
  <div class="row">
    <!-- Alignment -->
    <div class="col-sm-offset-3 col-sm-6">
      <!-- Form itself -->
      <%= form_for @review do |formElement| %>
          <%= render 'shared/review_error_messages' %>
          <legend>Radventure Review for</legend>
          <!--%= hidden_field_tag :user_id, current_user %-->
          <%= hidden_field_tag :guide_id, @guide.id %>
          <%= hidden_field_tag :reservation_id, @reservation.id %>
          <p><b>Guide: <%= @guide.user.name %>
            <br>Reservation Time: <%= @reservation.time %>
            <br>Location: <%= @reservation.location %>
          </b></p>
          <br>

          <legend>Title:
            <%= formElement.text_field :title , class:'form-control' %>
          </legend>
          <div class="row">
            <div class="control-group">
              <div class="controls">
                <p class="col-sm-1 help-block control-label">Rating:</p>
                <div class="col-xs-1">
                  <%= formElement.select(:rating, options_for_select(ratings)) %>
                  <!--/select-->
                </div>
                <p class="col-sm-3 help-block control-label">out of 5</p>
              </div>
            </div>
          </div>
          <div class="control-group">
            <p class="help-block"></p>
            <div class="controls">
              <%= formElement.text_area :content, 'rows' => 10, 'cols' => 100, class:'form-control',
                                        placeholder: "Write a Review",
                                        minlength: "5",
                                        maxlength: "999", style: "resize:none"%>
            </div>
            <p class="help-block"></p>
          </div>
          <% params[:res_id] = @reservation %>
          <%= formElement.submit 'Submit Review', class: "btn btn-primary btn-sm pull-right" %>
          <br>
      <% end %>
    </div>
  </div>
</div>
<!-- /.row -->

<hr>

