<% provide(:title, 'Update account information') %>
<h1>Update profile information</h1>

<%= link_to "Change Password", change_password_url(id: @user.id),  class: "btn btn-default"%>
<br></br>

<%= form_for(@user) do |formElement| %>
    <form class='form-horizontal'>
      <%= render 'shared/error_messages' %>

      <div class='form-group'>
        <%= formElement.label :name, class: 'col-sm-2 control-label' %>
        <%= formElement.text_field :name %>
      </div>

      <div class='form-group'>
        <%= formElement.label :email, class: 'col-sm-2 control-label' %>
        <%= formElement.email_field :email %>
      </div>

      <div class='form-group'>
        <%= formElement.label :phone_number, class: 'col-sm-2 control-label' %>
        <%= formElement.text_field :phone_number %>
      </div>

      <div class='form-group'>
        <%= formElement.label :age, class: 'col-sm-2 control-label' %>
        <%= formElement.text_field :age %>
      </div>

      <div class='form-group'>
        <%= formElement.label :profile, class: 'col-sm-2 control-label' %>
        <%= formElement.text_area :profile, 'rows' => 10, 'cols' => 100 %>
      </div>

      <div class='form-group'>
        <%= formElement.label :address, class: 'col-sm-2 control-label' %>
        <%= formElement.text_field :address, 'size' => 103 %>
      </div>

      <div class='form-group'>
        <%= formElement.label :city, class: 'col-sm-2 control-label' %>
        <%= formElement.text_field :city %>
      </div>

      <div class='form-group'>
        <%= formElement.label :state, class: 'col-sm-2 control-label' %>
        <%= formElement.select(:state, options_for_select(us_states)) %>
      </div>

      <div class='form-group'>
        <%= formElement.label :zipcode, class: 'col-sm-2 control-label' %>
        <%= formElement.text_field :zipcode %>
      </div>

      <div class='form-group'>
        <%= formElement.label :country, class: 'col-sm-2 control-label' %>
        <%= formElement.select(:country, options_for_select(countries)) %>
      </div>

      <div class='form-group'>
        <%= formElement.submit 'Save changes', class: 'btn btn-success'%>
      </div>

    </form>
<% end %>
