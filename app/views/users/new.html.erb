<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<%= form_for(@user) do |formElement| %>
  <form class='form-horizontal'>
    <%= render 'shared/error_messages' %>

    <div class='form-group'>
      <%= formElement.label :name, class: 'col-sm-2 control-label' %>
      <%= formElement.text_field :name %>
    </div>

    <div class='form-group'>
      <%= formElement.label :email, class: 'col-sm-2 control-label' %>
      <%= formElement.email_field :email %>
    </div>

    <div class='form-group'>
      <%= formElement.label :password, class: 'col-sm-2 control-label' %>
      <%= formElement.password_field :password %>
    </div>

    <div class='form-group'>
      <%= formElement.label :password_confirmation, 'Confirmation',
      class: 'col-sm-2 control-label'
        %>
        <%= formElement.password_field :password_confirmation %>
      </div>

      <div class='form-group'>
        <%= formElement.submit 'Create my account'%>
      </div>
  </form>
<% end %>
