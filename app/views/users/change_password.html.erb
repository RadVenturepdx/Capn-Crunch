<% provide(:title, 'Change password') %>
<div class="row">
  <div class="col-lg-12">
     <h1 class="page-header" style="text-align:center">Password Update</h1>
  </div>
</div>


<div class="row">
    <div class="col-sm-offset-4 col-sm-4 col-lg-4 col-md-4 well">
        <%= form_for(@user) do |formElement| %>
            <form class='well'>

              <%= render 'shared/user_error_messages' %>

              <div class='control-group'>
                 <div class="controls text-center">
                    <%= formElement.label 'Current password' %>
                    <br>
                    <%= password_field_tag 'current_password' %>
                 </div>
              </div>
              <br>

              <div class='control-group'>
                <div class="controls text-center">
                  <%= formElement.label 'New password' %>
                  <br>
                  <%= formElement.password_field :password %>
                </div>
              </div>
              <br>

              <div class='control-group'>
                <div class="controls text-center">
                  <%= formElement.label 'New password confirmation'  %>
                  <br>
                  <%= formElement.password_field :password_confirmation %>
                </div>
              </div>
              <br>

              <div class='control-group'>
                <div class="controls text-center">
                  <%= link_to "Cancel", edit_user_url(id: @user.id),  class: "btn btn-default"%>
                  <%= formElement.submit 'Confirm', class: 'btn btn-success'%>
                </div>
              </div>
              <br>
          </form>
        <% end %>
    </div>
</div>
