  <!-- Related Projects Row -->
  <div class="row">

    <div class="col-lg-12">
      <h3 class="page-header">Top Guides for Mt. Whistler</h3>
    </div>

    <% top_guides = [] %>
    <% local_guides('Mount Whistler').each do |guide| %>
        <% if guide.reviews.count > 0 %>
            <% average_rating = guide.reviews.average(:rating) %>
            <% if top_guides.empty? || top_guides[0].reviews.average(:rating) < average_rating %>
                <% if !top_guides[1].nil? %>
                    <% top_guides[2] = top_guides[1] %>
                <% end %>
                <% top_guides[1] = top_guides[0] %>
                <% top_guides[0] = guide %>
            <% elsif top_guides[1].nil? || top_guides[1].reviews.average(:rating) < average_rating %>
                <% top_guides[2] = top_guides[1] %>
                <% top_guides[1] = guide %>
            <% elsif top_guides[2].nil? || top_guides[2].reviews.average(:rating) < average_rating %>
                <% top_guides[2] = guide %>
            <% end %>
        <% end %>
    <% end %>

    <div class="col-md-4 col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <img class="img-responsive img-portfolio img-hover"
               src="http://web.cecs.pdx.edu/~ankgupta/guide-n-location/guide1.jpg"
               style="height:200px; width:400px;
                       margin-bottom: 0px;" alt="">
          <h4><%= link_to top_guides[0].user.name, top_guides[0] %></h4>
          <!-- <img class="img-responsive img-hover img-related" src="../img/guide-n-location/guide1.jpg" alt=""> -->
          <h4>Sports: <%= top_guides[0].specialty %></h4>
          <h4>Rate: <%= number_to_currency(top_guides[0].rate) %></h4>
          <h4>Rating: <% stars = top_guides[0].reviews.average(:rating).round %>
            <% stars.times do |i| %>
                <span class="fa fa-star"></span>
            <% end %>
            <% (5 - stars).times do |i| %>
                <span class="fa fa-star-o"></span>
            <% end %>
          </h4>
        </div>
      </div>
    </div>

