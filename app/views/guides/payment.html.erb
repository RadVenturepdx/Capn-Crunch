<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header" style="text-align:center">
      Payment
    </h1>
  </div>
</div>
<!-- /.row -->

<!-- Payment Section -->
<div id="payment">
  <div class="row">
    <!-- Alignment -->
    <div class="col-sm-offset-3 col-sm-6">
      <!-- Form itself -->
      <form name="sentMessage" class="well" id="paymentForm" style="padding-bottom:35px" novalidate>
        <legend>Summary for Radventure</legend>
        <p><b>Guide: Jane Doe
          <br>Reservation Times: 01/22/2015 1:00 PM - 01/22/2015 1:30 PM
          <br>Amount Due: $200.00
        </b></p>
        <br>

        <legend>Payment Information</legend>
        <div class="control-group">
          <div class="controls">
            <input type="text" class="form-control" placeholder="Name on Card"
                   id="name"  required
                   data-validation-required-message="Please enter the card holder's name"
                   disabled />
            <p class="help-block"></p>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <input type="number" class="form-control" placeholder="Card Number"
                   id="cardNum"  required
                   data-validation-required-message="Please enter the Credit Card Number"
                   disabled />
            <p class="help-block">
              Accepted payment methods
              <i class="fa fa-cc-amex fa-2x"></i>
              <i class="fa fa-cc-discover fa-2x"></i>
              <i class="fa fa-cc-mastercard fa-2x"></i>
              <i class="fa fa-cc-visa fa-2x"></i>
              <i class="fa fa-cc-paypal fa-2x"></i>
            </p>
          </div>
        </div>
        <div class="row control-group">
          <div class="controls col-sm-4">
            <input type="text" class="form-control" placeholder="CVV"
                   id="cvv"  required
                   data-validation-required-message="Please enter the security code"
                   disabled />
            <p class="help-block"></p>
          </div>
        </div>
        <div class ="row">
          <div class="control-group">
            <div class="controls">
              <p class="col-sm-3 help-block control-label">Expiration Date</p>
              <div class="col-xs-3">
                <select class="form-control col-sm-2" name="expireCardMonth" id="expireCardMonth">
                  <option>Month</option>
                  <option value="01">Jan </option>
                  <option value="02">Feb </option>
                  <option value="03">Mar </option>
                  <option value="04">Apr </option>
                  <option value="05">May </option>
                  <option value="06">June </option>
                  <option value="07">July </option>
                  <option value="08">Aug </option>
                  <option value="09">Sep </option>
                  <option value="10">Oct </option>
                  <option value="11">Nov </option>
                  <option value="12">Dec </option>
                </select>
              </div>
              <div class="col-xs-3">
                <select class="form-control col-sm-2" name="expireCardYear" id="expireCardYear">
                  <option>Year</option>
                  <option value="01">2015 </option>
                  <option value="02">2016 </option>
                  <option value="03">2017 </option>
                  <option value="04">2018 </option>
                  <option value="05">2019 </option>
                  <option value="06">2020 </option>
                  <option value="07">2021 </option>
                  <option value="08">2022 </option>
                  <option value="09">2023 </option>
                  <option value="10">2024 </option>
                  <option value="11">2025 </option>
                  <option value="12">2026 </option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <br>
        <legend>Billing Address</legend>
        <div class="control-group">
          <div class="controls">
            <input type="text" class="form-control" placeholder="Address Line"
                   id="address" required
                   data-validation-required-message="Please enter your address"
                   disabled />
            <p class="help-block"></p>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <input type="text" class="form-control" placeholder="City"
                   id="city" required
                   data-validation-required-message="Please enter your address"
                   disabled />
            <p class="help-block"></p>
          </div>
        </div>
        <div class="row">
          <div class="control-group col-sm-6">
            <div class="controls">
              <input type="text" class="form-control" placeholder="State"
                     id="state" required
                     data-validation-required-message="Please enter your state"
                     disabled />
              <p class="help-block"></p>
            </div>
          </div>
          <div class="control-group col-sm-6">
            <div class="controls">
              <input type="text" class="form-control" placeholder="Zip Code"
                     id="zip" required
                     data-validation-required-message="Please enter your zip code"
                     disabled />
              <p class="help-block"></p>
            </div>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <input type="text" class="form-control" placeholder="Country"
                   id="country" required
                   data-validation-required-message="Please enter your country"
                   disabled />
            <p class="help-block"></p>
          </div>
        </div>

        <br>
        <div class="control">
          <label class="checkbox-inline" style="padding-left:20px">
            <input type="checkbox" id="paymentConditions"> By checking the box, you agree to the
            <a href="">Terms and Conditions</a>
          </label>
          <%= link_to '<b>Make Payment</b>'.html_safe, home_path, class: "btn btn-primary pull-right" %>

          <div id="success"> </div> <!-- For success/fail messages -->


        </div>
      </form>
    </div>
  </div>
</div>
<!-- /.row -->
<!-- Tracking -->
<script src="//cdn.optimizely.com/js/2718120061.js"></script>