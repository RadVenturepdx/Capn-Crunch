

<!-- Page Heading/Breadcrumbs -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header" style="text-align:center">Leave a Guide Review</h1>
  </div>
</div>
<!-- /.row -->

<!-- Registration Section -->
<div id="guide">
  <div class="row">
    <!-- Alignment -->
    <div class="col-sm-offset-3 col-sm-6">
      <% @reservation = Reservation.find_by(id: res_id) %>
      <!-- Form itself -->
      <!-- <form name="sentMessage" class="well" id="guideProfileForm"  novalidate> -->
      <%= form_for Review.new do |formElement| %>
          <%= render 'shared/review_error_messages' %>
          <legend>Radventure Review for</legend>
          <p><b>Guide: <%= guide.user.name %>
            <br>Reservation Time: <%= @reservation.time %>   <!--01/22/2015 1:00 PM - 01/22/2015 1:30 PM-->
            <br>Location: <%= @reservation.location %>  <!--Bachelor-->
          </b></p>
          <br>

          <legend>Review</legend>
          <div class="row">
            <div class="control-group">
              <div class="controls">
                <p class="col-sm-1 help-block control-label">Rating:</p>
                <div class="col-xs-1">
                  <!--select class="form-control col-sm-3" name="rating" id="rating"-->

                  <%= formElement.select(:rating, options_for_select(ratings)) %>
                  <!--/select-->
                </div>
                <p class="col-sm-3 help-block control-label">out of 5</p>
              </div>
            </div>
          </div>
          <div class="control-group">
            <p class="help-block"></p>
            <div class="controls">
              <%= formElement.text_area :content, 'rows' => 10, 'cols' => 100, class:'form-control',
                                        placeholder: "Write a Review",
                                        minlength: "5",
                                        maxlength: "999", style: "resize:none"%>
              <!--textarea rows="10" cols="100" class="form-control"
                        placeholder="Write a Review" id="message" required
                        data-validation-required-message="Please enter a review for the guide" minlength="5"
                        data-validation-minlength-message="Min 5 characters"
                        maxlength="999" style="resize:none"></textarea-->
            </div>
            <p class="help-block"></p>
          </div>
          <% params[:res_id] = @reservation %>
          <%= formElement.submit 'Submit Review', class: "btn btn-primary btn-sm pull-right" %>
          <!---button type="submit" class="btn btn-primary btn-sm pull-right">Submit Review</button><br /-->
          <br>
          <!--</form> -->
      <% end %>
    </div>
  </div>
</div>
